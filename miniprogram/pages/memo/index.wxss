/* pages/memo/index.wxss */

.aiTags {
  border-top: 1rpx solid #00000015;
  display: flex;
  flex-wrap: wrap;
  overflow: scroll;
  gap: 10rpx;
  align-items: center;
  position: relative;
  font-size: 30rpx;
  padding: 20rpx 0 0 0;
}

.aiTags .title {
  flex-shrink: 0;
  margin: 0 20rpx;
}

.aiTags .tag {
  flex-shrink: 0;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  color: #07c160;
  background-color: #07c16015;
  transition: 300ms;
}

.aiTags .tag:active {
  transform: scale(0.9);
}

.tip {
  margin: 0;
  border-radius: 30rpx 30rpx 0 0;
  display: flex;
  align-items: center;
}

.copyLinkIcon {
  background-image: url(data:image/svg+xml;base64,);
}

.tip .tipBtn {
  margin-left: auto;
  background-color: #07c160;
  color: #ffffff;
  padding: 5rpx 20rpx;
  border-radius: 10rpx;
  transition: 300ms;
}

.tip .tipBtn:active {
  transform: scale(0.9);
}

.memoCard {
  border-bottom: none;
  margin-bottom: 400rpx;
}

.nothing {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 30%;
  margin: 30% auto;
  animation: show 2s ease-in-out alternate-reverse infinite;
}

.face {
  width: 200rpx;
  height: 200rpx;
  background-image: url(data:image/svg+xml;base64,);
  background-size: cover;
  margin-bottom: 30rpx;
}

.shareBtn {
  position: fixed;
  bottom: 150rpx;
  right: 50rpx;
  background-color: #ffffff;
  border: 1rpx solid #00000015;
  display: flex;
  width: fit-content !important;
  font-size: 30rpx;
  justify-content: center;
  align-items: center;
  padding: 20rpx 40rpx;
  border-radius: 20rpx;
}

.sIcon {
  width: 40rpx;
  height: 30rpx;
  background-size: contain;
  background-repeat: no-repeat;
}

.shareIcon {
  background-image: url(data:image/svg+xml;base64,);
}


@import 'index-wxa-auto-dark.wxss'